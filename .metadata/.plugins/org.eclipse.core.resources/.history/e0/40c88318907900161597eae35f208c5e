package Ex5_4;

public class Counter extends Thread {
	private int count;

	public Counter(int count) {
		super();
		this.count = count;
	}
	
	@Override
	public void run() {
		for (int i = this.count; i <= (this.count+ 1); i++) {
			this.count = i;
//			try {
//				Thread.sleep(1000);
//			} catch (InterruptedException e) {
//				// TODO Auto-generated catch block
//				e.printStackTrace();
//			}
		}
	}
	
	public int getCount() {
		return count;
	}
	
	public void setCount(int count) {
		this.count = count;
	}
	
}
