package Ex6_3;

import java.util.ArrayList;
import java.util.List;

public class ListStudent {
	private List<Student> list;
	
	public ListStudent(){
		this.list = new ArrayList<Student>();
	}
	
	// add student
	public void addStudent(Student stu) {
		list.add(stu);
	}
	
	// show information of students
	public void showInfo() {
		for (Student stu : list) {
			System.out.println(stu.toString());
		}
	}
	
	public void avaluate() {
		int countGood =(int) list.stream().filter(n -> n.getAvg() >= 8).count();
		int countExcellent = (int) list.stream().filter(n -> n.getAvg() >=7 && n.getAvg() < 8).count();;
		int countAverage = (int) list.stream().filter(n -> n.getAvg() >= 5 && n.getAvg() < 7).count();;
		int countWeak = (int) list.stream().filter(n -> n.getAvg() < 5).count();;

		System.out.println(countGood +"kd"+ countExcellent);
	}
	
	
	
}
