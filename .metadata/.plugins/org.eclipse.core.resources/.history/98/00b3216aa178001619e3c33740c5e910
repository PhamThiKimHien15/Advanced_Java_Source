package Ex4_1;

import java.util.Arrays;
import java.util.List;

public class MainStream {
	public static void main(String[] args) {
		List<String> strings = Arrays.asList("happy", "sad", "happy", "",
				"oil", "afdsf", "sad", "oil", "happy", "interesting", "sad", "interesting", "abc");
		// count the element have value " "
		int count = (int) strings.stream().filter(string -> string.isEmpty()).count();
		System.out.println("Element null = " + count);
		
		// Count String with length greater than or equal 5
		int countLenght = (int) strings.stream().filter(n -> n.length() >= 5).count();
		System.out.println("Count the element have length >= 5:  " + countLenght);
		
		// count the element have value beginning with a
		int countAA = 0;
		boolean countA = strings.stream().anyMatch(e -> e.startsWith("a"));		
		if (countA){
			countAA++;
		}
		System.out.println("Count the element have value beginning with a: " + countAA);
	}
}
