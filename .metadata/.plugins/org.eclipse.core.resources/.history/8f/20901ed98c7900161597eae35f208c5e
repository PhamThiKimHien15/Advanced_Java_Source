package Ex5_4;

import java.util.Random;
import java.util.Scanner;

public class MainCounter {
	public static void main(String[] args) throws InterruptedException {
		Scanner input = new Scanner(System.in);
		System.out.println("Input counter: ");
		int n = input.nextInt();
		int[] arr = new int[n];
		
		System.out.println("Input num of Threads: ");
		int numThreads = input.nextInt();
		int count = count(arr, numThreads, n);
		
		String strArr ="";
		for (int i : arr) {
			strArr += i + " ";
		}
		System.out.println("Max: " + count);
	}

	private static int count(int[] arr, int numThreads, int n) throws InterruptedException {
		int len = arr.length;
		int count = -1;
		
		//create and start numThreads
		Counter[] st = new Counter[numThreads];
		for (int i = 0; i < numThreads; i++) {
			st[i] = new Counter((i*len)/numThreads,((i+1)*len/numThreads), arr, n);
			st[i].start();		
		}
		
		// wait for the threads to finish and sum  their results
		for (int i = 0; i < numThreads; i++) {
			st[i].join();
			count = st[i].getCount();
			System.out.println(count);
			Thread.sleep(1000);
		}		
		return count;
	}
	
}
