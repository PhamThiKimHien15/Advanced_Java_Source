									ScoreSubject sbj = new ScoreSubject(0, 0,cls1.getArraySubject().get(nameSubject-1).getName(), cls1.getArrayStudent().get(i).getName());
									sbj.addAttendance(att);
									cls1.addScoreOfSecondSubject(sbj);
								}	
