package Ex1_10;

public class Student extends Human{

	private String stuclass;
	private double hH1;
	private double hK2;
	
	public Student(String name, String days, String address, String phone, String stuclass, double hH1, double hK2) {
		super(name, days, address, phone);
		this.stuclass = stuclass;
		this.hH1 = hH1;
		this.hK2 = hK2;
	}

	public String getStuclass() {
		return stuclass;
	}

	public void setStuclass(String stuclass) {
		this.stuclass = stuclass;
	}

	public double gethH1() {
		return hH1;
	}

	public void sethH1(double hH1) {
		this.hH1 = hH1;
	}

	public double gethK2() {
		return hK2;
	}

	public void sethK2(double hK2) {
		this.hK2 = hK2;
	}

	public double calcAverage() {
		return (this.hH1 + this.hK2)/2;
	}
}
